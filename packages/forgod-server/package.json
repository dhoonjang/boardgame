{
  "name": "@forgod/server",
  "version": "0.1.0",
  "description": "MCP server and HTTP API for Forgod game",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "forgod-mcp": "./dist/index.js",
    "forgod-api": "./dist/api.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/api.ts --format esm --dts",
    "dev": "tsup src/index.ts src/api.ts --format esm --dts --watch",
    "start:mcp": "node dist/index.js",
    "start:api": "node dist/api.js",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@forgod/core": "workspace:*",
    "@hono/node-server": "^1.8.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@supabase/supabase-js": "^2.45.0",
    "hono": "^4.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist"
  ]
}
